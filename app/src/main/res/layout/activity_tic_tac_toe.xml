<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TicTacToeActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#655D5D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top">

            <Button
                android:id="@+id/btn1"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="@dimen/btn_margin"
                android:textSize="@dimen/btn_text_size"
                android:backgroundTint="@color/white"
                android:text="" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="@dimen/btn_margin"
                android:textSize="@dimen/btn_text_size"
                android:backgroundTint="@color/white"
                android:text="" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_width"
                android:layout_margin="@dimen/btn_margin"
                android:textSize="@dimen/btn_text_size"
                android:backgroundTint="@color/white"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="@dimen/btn_margin"
                android:textSize="@dimen/btn_text_size"
                android:backgroundTint="@color/white"
                android:text="" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="@dimen/btn_margin"
                android:textSize="@dimen/btn_text_size"
                android:backgroundTint="@color/white"
                android:text="" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="@dimen/btn_margin"
                android:textSize="@dimen/btn_text_size"
                android:backgroundTint="@color/white"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="@dimen/btn_margin"
                android:textSize="@dimen/btn_text_size"
                android:backgroundTint="@color/white"
                android:text="" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="@dimen/btn_margin"
                android:textSize="@dimen/btn_text_size"
                android:backgroundTint="@color/white"
                android:text="" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="@dimen/btn_margin"
                android:textSize="@dimen/btn_text_size"
                android:backgroundTint="@color/white"
                android:text="" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/player1Points_tv"
        android:layout_width="@dimen/player1_points_tv_width"
        android:layout_height="@dimen/player1_points_tv_height"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.081" />

    <TextView
        android:id="@+id/player2Points_tv"
        android:layout_width="@dimen/player2_points_tv_width"
        android:layout_height="@dimen/player2_points_tv_height"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1Points_tv"
        app:layout_constraintVertical_bias="0.123" />

    <Button
        android:id="@+id/newGameButton"
        android:layout_width="@dimen/newGame_btn_width"
        android:layout_height="@dimen/newGame_btn_height"
        android:layout_marginBottom="68dp"
        android:text="@string/new_game"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

